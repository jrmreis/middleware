{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "alertName": {
      "value": "Job status failed"
    },
    "alertDescription": {
      "value": ""
    },
    "alertSeverity": {
      "value": 3
    },
    "query": {
      "value": "InsightsMetrics | invoke pquery_gauge('kube_job_status_failed') | extend job_name = tostring(Labels.job_name) | extend namespace = tostring(Labels.namespace) | extend reason = tostring(Labels.reason) | where Val > 0"
    },
    "resourceIdColumn": {
      "value": "_ResourceId"
    },
    "operator": {
      "value": "GreaterThan"
    },
    "threshold": {
      "value": "0"
    },
    "timeAggregation": {
      "value": "Count"
    },
    "windowSize": {
      "value": "PT5M"
    },
    "evaluationFrequency": {
      "value": "PT5M"
    },
    "dimensions": {
      "value": [
        {
          "name": "job_name",
          "operator": "Include",
          "values": ["*"]
        },
        {
          "name": "namespace",
          "operator": "Include",
          "values": ["*"]
        }
      ]
    }
  }
}
