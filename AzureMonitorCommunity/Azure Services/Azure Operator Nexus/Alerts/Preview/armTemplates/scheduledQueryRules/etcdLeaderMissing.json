{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "alertName": {
      "value": "etcd leader missing"
    },
    "alertDescription": {
      "value": ""
    },
    "alertSeverity": {
      "value": 3
    },
    "query": {
      "value": "InsightsMetrics | invoke pquery_gauge('etcd_server_has_leader') | extend hostName = Labels.hostName"
    },
    "metricMeasureColumn": {
      "value": "Val"
    },
    "resourceIdColumn": {
      "value": "_ResourceId"
    },
    "operator": {
      "value": "LessThan"
    },
    "threshold": {
      "value": "1"
    },
    "timeAggregation": {
      "value": "Minimum"
    },
    "windowSize": {
      "value": "PT5M"
    },
    "evaluationFrequency": {
      "value": "PT5M"
    }
  }
}
